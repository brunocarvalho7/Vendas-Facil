<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeVendaPagamento" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>

    </style>

    <style name="AppThemeVendaPagamento.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/colorBackground</item>
    </style>

    <style name="AppThemeVendaPagamento.TextAppearance.PagamentoLabelPrimary"
        parent="AppThemeVendaPagamento.TextAppearance">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AppThemeVendaPagamento.TextAppearance.PagamentoLabelSecondary"
        parent="AppThemeVendaPagamento.TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppThemeVendaPagamento.TextAppearance.PagamentoLabelSecondaryBold"
        parent="AppThemeVendaPagamento.TextAppearance.PagamentoLabelSecondary">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
